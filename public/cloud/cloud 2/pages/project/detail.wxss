  height: 84rpx;
  display: flex;
  flex-direction: row;
  border-bottom:1px solid #f5f5f5;
}
.tab-item{
  position: relative;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.active{
  position: absolute;
  border-bottom:6rpx solid #01BABB; 
  color:#01BABB;
  border-radius:3px;
  bottom: 0;
  width: 62rpx;
}
