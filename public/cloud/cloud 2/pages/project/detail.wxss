.back-drop-block {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, .7);
    z-index: 10;
    display: flex;
    justify-content: center;
}
.back-drop-block image{
    margin: 0 !important;
}
.canvas-block {
    width: 636rpx;
    height: 820rpx;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.03);
    background: #fff;
    align-self: center;
}

#canvas {
    width: 636rpx;
    height: 820rpx;
    position: absolute;
    /*left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
