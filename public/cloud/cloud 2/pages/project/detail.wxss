}

.poster {
    width: calc(100%);
    height: calc(100%);
    vertical-align: middle;
}

.back-drop-buttons {
    padding: 40rpx 60rpx;
    width: 100%;
}

button:not([size='mini']).share-it,
button:not([size='mini']).keep-it {
    width: 290rpx;
    height: 88rpx;
    border-radius: 50rpx;
    background: #04A7A9;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-weight: 400 !important;
    padding: 0 !important;
    margin: 0 !important;
    line-height: unset !important;
}

.close-icon {
    width: 42rpx;
    height: 42rpx;
    vertical-align: middle;
}

.split {
    height: 20rpx;
    background: #F9F9F9;
}

.icon-block {
    width: 90rpx;
    height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon-block>.icon {
    margin: 0;
    vertical-align: middle;
    margin-bottom: 20rpx;
}


