/* pages/project/detail.wxss */
@import '/towxml/style/main.wxss';

.detail-block {
    width: 100vw;
    height: 100vh;
    z-index: 1000;
}

scroll-view {
    width: calc(100%);
    height: calc(100%);
}

.swiper-banner {
    height: 520rpx;
}

.banner-img {
    width: 100%;
    height: 100%;
    vertical-align: middle;
    margin: 0;
}

.indicator {
    padding: 5rpx 15rpx;
    right: 40rpx;
    bottom: 40rpx;
    background: rgba(51, 51, 51, 0.5);
    border-radius: 30rpx;
}

.fixed-block {
    border-top: 2rpx solid #ccc;
}

.share {
  background:rgba(4,167,169,0.09);
  /* box-shadow:0px -2px 8px 0px rgba(224,224,226,0.51); */
  border-radius:39px;
  color: #04A7A9;
}

.reserve {
    background: #01BABB;
    border-radius:39px;
}

button:not([size='mini']).reserve,
button:not([size='mini']).share {
    width: 194rpx;
    height: 78rpx;
    /* border-radius: 12rpx !important; */
    font-weight: 400 !important;
    padding: 0 !important;
    margin: 0 !important;
    line-height: unset !important;
}

button:not([size='mini']).collection-block,
button:not([size='mini']).share-block,
button:not([size='mini']).forward-block {
    width: auto !important;
    height: auto !important;
    font-weight: 400 !important;
    padding: 0 !important;
    margin: 0 !important;
    line-height: unset !important;
    background: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #8A8989;
}

.other-icon-block {
    width: 40rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.other-icon-block .icon {
    width: 85%;
    vertical-align: middle;
}

.similar-item {
    padding: 50rpx 30rpx;
}

.list-banner {
    width: 260rpx;
    height: 168rpx;
    border-radius: 8rpx;
    vertical-align: middle;
    margin: 0 30rpx 0 0;
}

.list-main {
    width: calc(100% - 290rpx);
}

.price {
    color: #FF4C62;
}

.similar-label {
    font-size: 22rpx;
    padding: 5rpx 15rpx;
    border-radius: 2rpx;
    color: #A2A2B1;
    background: #F5F9FA;
}
.avatar.absolute{
    width: 70rpx;
    height: 70rpx;
    border-radius:35rpx !important;
    margin: 0;
    top: 50%;
    /* transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    -moz-transform: translateY(-50%);
    -webkit-transform: translateY(-50%);
    -o-transform: translateY(-50%); */
    border: 2rpx solid #fff;
    margin-top: -35rpx;
}

.vertical-split-line{
    height: 74rpx;
    width: 2rpx;
    background: #f9f9f9;
}
