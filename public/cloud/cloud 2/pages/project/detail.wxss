.infos {
    background: #fff;
}
.infos-more{
    background: #fff;
}
.infos-more .item .label{
    width: 160rpx;
}
.infos.init .item {
    min-width: 50%;
}
.infos.bad .item {
    flex:0 0 100%;
}
.infos.merchant .item {
    flex:0 0 100%;
}
.view-more {
    height: 100rpx;
    background: rgba(248, 248, 248, 1);
