/* pages/index/service.wxss */
.service-block {
    width: 100vw;
    height: 100vh;
}

.name {
    font-size: 42rpx;
    color: #3E4144;
}

.logo {
    width: 136rpx;
    height: 136rpx;
    border-radius: 50%;
    vertical-align: middle;
    border: 2rpx solid rgba(231, 231, 231, 1);
}

.avatar {
    width: 84rpx;
    height: 84rpx;
    vertical-align: middle;
    border-radius: 50%;
}

.phone-call {
    height: 62rpx;
    border-radius: 50rpx;
    width: 150rpx;
    border: 2rpx solid #04A7A9;
    color: #04A7A9;
    display: flex;
    align-items: center;
    justify-content: center;
}

.tel-icon {
    width: 28rpx;
    height: 28rpx;
    vertical-align: middle;
}

.split {
    height: 20rpx;
    background: #F3F4F4;
}

.label {
    background: rgba(230, 246, 246, 1);
    border-radius: 50rpx;
    font-size:24rpx;
    color: #21ACAF;
    padding: 10rpx 30rpx;
}

.company-block-title {
    border-bottom: 2rpx solid #ededed;
}

.company-banner {
    width: 100%;
    vertical-align: middle;
    border-radius: 20rpx;
}

.tips {
    color: #C35E0C
}

.buttons {
    border-top: 4rpx solid #ccc;
}
button:not([size='mini']){
    width: auto;
    height: auto;
    background: unset;
    padding: 0 !important;
    margin: 0 !important;
    line-height: unset !important;
}
.share-icon{
	width: 41rpx;
	height: 41rpx;
	margin-bottom: 5rpx;
}
.button {
    width: 560rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    color: #fff;
    background: rgba(4, 167, 169, 1);
    border-radius: 12rpx;
}