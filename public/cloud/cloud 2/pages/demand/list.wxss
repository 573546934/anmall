/* pages/mine/publish.wxss */
.search-tabs{
    position: relative;
    z-index: 1;
}
.search-area{
    padding: 20rpx 55rpx;
}
.search-box{
    width: 100%;
    height: 72rpx;
    border-radius: 48rpx;
    background: #f1f1f1;
}
.search-icon{
    margin:0 15rpx 0 40rpx;
    color: #545353;
}
.tabs-area{
    height: 92rpx;
    width: 100vw;
    border-bottom: 1rpx solid #ECEDED;
    box-sizing: border-box;
    box-shadow: 0 2rpx 2rpx #ECEDED;
}
.tabs-area .mask{
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0);
    z-index: 1;
}
.swiper,.scroll-block{
    height: calc(100vh - 204rpx);
}
.scroll-view{
    height: calc(100%);
}
.item-banner{
    width: 240rpx;
    height: 160rpx;
    border-radius: 8rpx;
    vertical-align: middle;
}
.item-info{
    width: calc(100% - 260rpx);
}
.labels{
    padding: 5rpx 0;
}
.label{
    font-size: 22rpx;
    padding: 5rpx 15rpx;
    border-radius: 50rpx;
}
.label-apartment{
    background: #E6F6F6;
    color: #21ACAF;
}
.publish-list .desc{
    padding: 5rpx 0;
    width: calc(100%);
}
.label-auditing{
    background: #E6F6F6;
    color: #21ACAF;
}
.label-audited{
    background: #EAF7EA;
    color: #0AA42B;
}
.label-unaudited{
    background: #FFF3F3;
    color: #A60E07;
}
.swiper{
	background: #F3F4F4;
}
.info{
	flex: 0 0 50%;
}
.color-A43B3B{
	color: #A43B3B;
}
.to-service{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    vertical-align: middle;
    position: fixed;
    box-shadow:0px 8rpx 16rpx 0px rgba(97,195,197,0.47);
    right: 20rpx;
}