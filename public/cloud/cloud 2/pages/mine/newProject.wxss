/* pages/mine/newProject.wxss */
scroll-view{
    width: 100vw;
    height: 100vh;
    background-image: linear-gradient(#fff,#f3f4f4);
}
.title-input{
    border-bottom: 2rpx solid #efefef;
}
.upload-img{
    flex: 0 0 215rpx;
    height: 215rpx;
    border-radius: 2rpx;
    border: 1rpx dashed #999;
    margin-bottom: 30rpx;
}
.is-public .icon{
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    border: 2rpx solid #999;
}
.form-item{
    border-bottom: 2rpx solid #e1e1e1;
}
.form-item:last-child{
    border-bottom: none;
}
.label-item{
    width: 180rpx;
}
.buttons{
    padding: 40rpx 60rpx;
}
.btn{
    height: 88rpx;
    width: 295rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50rpx;
    box-sizing: border-box;
}
.btn.btn-cancel{
    border: 2rpx solid #ccc;
    color: #3E4144;
    background: #fff;
}
.btn.btn-publish{
    background: #04A7A9;
    color: #fff;
}