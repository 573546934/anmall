/* pages/community/index.wxss */
@import '/towxml/style/main.wxss';
.h2w__main{
    padding: 0;
    margin: 0;
}
.community-block{
    width: 100vw;
    height: 100vh;
}
.swiper-banner {
    height: 400rpx;
}

.banner-img {
    width: calc(100%);
    height: calc(100%);
    vertical-align: middle;
    box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(10, 56, 111, 0.28);
    border-radius: 20rpx;
}

.indicatros {
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
}

.indicator {
    width: 16rpx;
    height: 12rpx;
    border-radius: 6rpx;
    background: #fff;
    margin-right: 8rpx;
    transition: width .25s;
}

.indicator:last-child {
    margin-right: none;
}

.indicator.active {
    width: 40rpx;
    background: #00A8B0;
    transition: width .25s;
}

.share-scroll {
    height: 220rpx;
    white-space: nowrap;
}

.share-item {
    width: 335rpx;
    height: 200rpx;
    display: inline-block;
    border-radius: 12rpx;
    background: #fff;
    /* box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.2); */
}

.share-item:first-child {
    margin-left: 5rpx;
}

.reservation {
    background: linear-gradient(#36B7CB, #04A7A9);
    width: 110rpx;
    height: 36rpx;
    color: rgba(235, 243, 254, 1);
    border-radius: 0 50rpx 50rpx 0;
    left: 0;
    top: 15rpx;
}
.reservation-split-line{
  width: 56rpx;
  height: 2rpx;
  background: #333;
}
.avatar {
    height: 200rpx;
    width: 200rpx;
    vertical-align: middle;
    top: 0;
    right: 0;
    border-radius: 0 12rpx 12rpx 0;
}
.share-main{
    width: calc(100% - 180rpx);
    height: calc(100% - 60rpx);
    bottom: 0;
}
.live-banner {
    width: 245rpx;
    height: 160rpx;
}

.live-banner>.banner {
    width: calc(100%);
    height: calc(100%);
    vertical-align: middle;
    border-radius: 8rpx;
}
.living-block{
    left: 10rpx;
    top: 10rpx;
}
.live-icon{
    width: 20rpx;
    height: 20rpx;
    vertical-align: middle;
}
.live-text{
    text-shadow:0rpx 4rpx 4rpx rgba(0,0,0,0.5);
}
