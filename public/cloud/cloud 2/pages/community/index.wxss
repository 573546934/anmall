    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}*/

.live-main {
    width: calc(100% - 265rpx);
}
.reserve{
    width: 140rpx;
    height: 52rpx;
    border-radius: 26rpx;
    color: #fff;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    align-self: flex-end;
    margin-left: 60rpx;
}
.bg-efefef{
    background: #EFEFEF;
}
.activity-item,.lookfor-partner-list {
    width: calc(100%);
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.08);
    background: #fff;
}

.activity-icon,.lookfor-partner-icon {
    width: 44rpx;
    height: 44rpx;
    top: 0;
    left: 0;
    vertical-align: middle;
    margin: 0;
}

.title-icon {
    width: 2rpx;
    height: 28rpx;
}

.button {
    width: 206rpx;
    height: 64rpx;
    border-radius: 32rpx;
}
.corporation-content,
.empty-content{
	width: calc(100%);
	/*height: 360rpx;*/

}
.corporation-banner,
.empty-banner{
	vertical-align: middle;
	width: calc(100%);
	height: calc(100%);
	border-radius: 12rpx;
}