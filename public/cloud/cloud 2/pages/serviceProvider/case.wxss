/* pages/authen/serviceProvider/case.wxss */
.wrap{
    padding: 0 30rpx;
}
.wrap .title{
    color: #333;
    font-weight: bold;
    font-size: 30rpx;
    margin-top: 40rpx;
}
.formGroup textarea{
    border-radius: 10rpx;
    background:#f8f8f8;
    font-size: 26rpx;
    line-height: 48rpx;
    padding:50rpx 28rpx;
    width: 100%;
    height: 330rpx;
    margin-bottom: 20rpx;
    margin-top: 40rpx;
}
.submit .btn{
    width: 630rpx;
    height: 88rpx;
    line-height: 88rpx;
    color: #fff;
    font-size: 30rpx;
    font-weight: bold;
    border-radius: 300rpx;
    background: #04a7a9;
    display: block;
    padding: 0;
    margin-bottom: 90rpx;
    margin-top: 120rpx;
}

.caseDesc{
    display: block;
    font-size: 26rpx;
    color: #999;
    margin-top: 20rpx;
    margin-bottom: 44rpx;
}



.upImg{
    background: #f8f8f8;
    padding:40rpx 0;
    margin:20rpx 0 20rpx 0; 
}
.clickUpload image{
    width: 60rpx;
    height: 60rpx;
    margin: 0 auto;
}
.clickUpload text{
    text-align: center;
    font-size:26rpx;
    color: #04a7a9;
    display: block;
    margin-top: 24rpx;
}
.inputitem{
    display: flex;
    padding: 30rpx 28rpx;
    background: #f8f8f8;
}
.inputitem input{
    padding-left: 20rpx;
    font-size: 30rpx;
}

.addCase{
    width: 100%;
    height:88rpx;
    line-height: 88rpx;
    border: 1px solid #04a7a9;
    color: #04a7a9;
    font-size: 30rpx;
    text-align: center;
    border-radius: 15rpx;
}