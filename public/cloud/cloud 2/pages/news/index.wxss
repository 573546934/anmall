/* pages/news/index.wxss */
.news{
	width: 100vw;
	height: 100vh;
}
.search-block{
	box-shadow:0px 1rpx 0px 0px rgba(204,204,204,1);
}
navigator:last-child .item{
	margin-bottom: 0;
}
.item-banner{
	width: 240rpx;
	height: 160rpx;
	border-radius: 8rpx;
	vertical-align: middle;
}
.tabs-area .mask{
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0);
    z-index: 1;
}
.item-main{
	width: calc(100% - 260rpx);
}